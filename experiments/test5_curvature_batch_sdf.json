{
    "description": "SIREN Learning of test 5 mesh using SDF values and non-uniform sampling.",
    "num_epochs": 1000,
    "sampling_opts": {
        "uniform_sampling": false,
        "curvature_iteration_fractions": [0.75, 0.2, 0.05],
        "percentile_thresholds": [0.7, 0.95]
    },
    "dataset": [
        "data/segmented/test5/normalized/test1_0_curv.ply",
        "data/segmented/test5/normalized/test1_1_curv.ply",
        "data/segmented/test5/normalized/test1_2_curv.ply",
        "data/segmented/test5/normalized/test1_3_curv.ply",
        "data/segmented/test5/normalized/test1_4_curv.ply"
    ],
    "selector": "data/segmented/test5/normalized/selector.csv",
    "batch_size": 3800,
    "checkpoint_path": "results",
    "experiment_name": "test5_curvature_sdf",
    "epochs_to_checkpoint": 250,
    "epochs_to_reconstruction": [1],
    "loss": "sdf",
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "reconstruction": {
        "resolution": 128,
        "output_file": "final"
    },
    "network": {
        "hidden_layer_nodes": [256, 256, 256, 256],
        "w0": 60
    }
}
