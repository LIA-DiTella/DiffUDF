{
    "description": "SIREN Learning of complete test mesh using SDF values and non-uniform sampling.",
    "num_epochs": 1000,
    "sampling_opts": {
        "curvature_iteration_fractions": [0.2, 0.4, 0.4],
        "curvature_percentile_thresholds": [0.6, 0.85]
    },
    "dataset": "data/Preprocess/armadillo_big.ply",
    "batch_size": 20000,
    "sampling_percentiles": [0.5, 0.5, 0.0],
    "batches_per_epoch": 1,
    "checkpoint_path": "results/armadillo",
    "experiment_name": "tanh_delayed_gc",
    "epochs_to_checkpoint": 500,
    "gt_mode": "tanh",
    "loss": "loss_tanh_gc",
    "loss_weights": [ 1e4, 1e3, 1e4, 1e2, 1e3 ],
    "alpha": 10,
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "network": {
        "hidden_layer_nodes": [256,256,256,256,256,256,256,256],
        "w0": 30,
        "pretrained_dict": "results/armadillo/tanh_gc/models/model_best.pth"
    },
    "point_cloud":{
        "surf_thresh": 0.007,
        "grad_thresh": 0.007,
        "nsamples": 1000
    },
    "sphere_tracing": {
        "width": 128,
        "surf_thresh": 0.01,
        "grad_thresh": 0.2,
        "origin": [-0.5,0.5,-2],
        "distance": 1,
        "light_pos": [-1,0,-2]
    }
}
