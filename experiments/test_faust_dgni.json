{
    "description": "SIREN Learning of complete test mesh using SDF values and non-uniform sampling.",
    "num_epochs": 100,
    "sampling_opts": {
        "curvature_iteration_fractions": [0.2, 0.4, 0.4],
        "curvature_percentile_thresholds": [0.6, 0.85]
    },
    "dataset": "results/faust/faust_6890.json",
    "batch_size": 19992,
    "checkpoint_path": "results/faust",
    "experiment_name": "test_faust_dgni",
    "epochs_to_checkpoint": 30,
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "loss": "dgni",
    "network": {
        "hidden_layer_nodes": [256, 256, 256, 256],
        "w0": 60
    }
}
