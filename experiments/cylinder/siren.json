{
    "description": "SIREN Learning of complete test mesh using SDF values and non-uniform sampling.",
    "num_epochs": 500,
    "sampling_opts": {
        "curvature_iteration_fractions": [0.2, 0.4, 0.4],
        "curvature_percentile_thresholds": [0.6, 0.85]
    },
    "dataset": "data/segmented/pruebas/cylinder.json",
    "batch_size": 20000,
    "sampling_percentiles": [0.5, 0.5, 0.0],
    "batches_per_epoch": 1,
    "checkpoint_path": "results/cylinder",
    "experiment_name": "siren",
    "epochs_to_checkpoint": 300,
    "loss": "loss_siren",
    "loss_weights": [5e3, 5e2, 5e2, 5e1 ],
    "alpha": 1,
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "network": {
        "hidden_layer_nodes": [256,256,256,256],
        "w0": 60,
        "pretrained_dict": "None"
    },
    "point_cloud":{
        "surf_thresh": 0.007,
        "grad_thresh": 0.007,
        "nsamples": 200000
    },
    "sphere_tracing": {
        "width": 512,
        "surf_thresh": 0.015,
        "grad_thresh": 3,
        "origin": [1.7,1.7,-1.7],
        "distance": 1,
        "light_pos": [1,0,-2]
    }
}
