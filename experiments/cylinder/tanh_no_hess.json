{
    "description": "SIREN Learning of complete test mesh using SDF values and non-uniform sampling.",
    "num_epochs": 1000,
    "sampling_opts": {
        "curvature_iteration_fractions": [0.2, 0.4, 0.4],
        "curvature_percentile_thresholds": [0.6, 0.85]
    },
    "dataset": "data/Preprocess/cylinder.ply",
    "batch_size": 20000,
    "sampling_percentiles": [0.5, 0.5, 0.0],
    "batches_per_epoch": 1,
    "checkpoint_path": "results/cylinder",
    "experiment_name": "tanh_no_hess",
    "epochs_to_checkpoint": 450,
    "loss": "loss_tanh",
    "loss_weights": [ 1e4, 1e3, 0, 1e1, 1e2 ],
    "alpha": 10,
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "network": {
        "hidden_layer_nodes": [256,256,256,256,256,256,256,256],
        "w0": 30,
        "pretrained_dict": "None"
    },

    "point_cloud":{
        "surf_thresh": 0.007,
        "grad_thresh": 0.007,
        "nsamples": 1000
    },
    "sphere_tracing": {
        "width": 32,
        "surf_thresh": 0.01,
        "grad_thresh": 0.09,
        "origin": [1.7,1.7,-1.7],
        "distance": 1,
        "light_pos": [1,0,-2]
    }
}
