{
    "description": "SIREN Learning of complete test mesh using SDF values and non-uniform sampling.",
    "num_epochs": 250,
    "sampling_opts": {
        "curvature_iteration_fractions": [0.5, 0.3, 0.2],
        "curvature_percentile_thresholds": [0.1, 0.9]
    },
    "dataset": "results/armadillo/armadillo_curvs.json",
    "batch_size": 192,
    "checkpoint_path": "results/armadillo",
    "experiment_name": "test_armadillo",
    "epochs_to_checkpoint": 50,
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "network": {
        "hidden_layer_nodes": [256, 256, 256, 256],
        "w0": 60
    }
}
