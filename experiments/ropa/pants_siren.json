{
    "description": "SIREN Learning of complete test mesh using SDF values and non-uniform sampling.",
    "num_epochs": 300,
    "sampling_opts": {
        "curvature_iteration_fractions": [0.2, 0.4, 0.4],
        "curvature_percentile_thresholds": [0.6, 0.85]
    },
    "dataset": "data/segmented/pruebas/Pants0.json",
    "batch_size": 20000,
    "sampling_percentiles": [0.5, 0.5, 0.0],
    "batches_per_epoch": 1,
    "checkpoint_path": "results/ropa/pants",
    "experiment_name": "siren",
    "epochs_to_checkpoint": 300,
    "loss": "loss_siren",
    "loss_weights": [3e3, 2e2, 1e2, 5e1 ],
    "alpha": 6,
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "network": {
        "hidden_layer_nodes": [256,256,256,256],
        "w0": 60,
        "pretrained_dict": "results/sphere/siren/models/model_best.pth"
    },
    "point_cloud":{
        "surf_thresh": 0.007,
        "grad_thresh": 0.007,
        "nsamples": 200000
    },
    "sphere_tracing": {
        "width": 512,
        "surf_thresh": 0.04,
        "grad_thresh": 0.04,
        "origin": [-1.7,1.3,1.7],
        "distance": 1,
        "light_pos": [-1,1,2]
    }
}
